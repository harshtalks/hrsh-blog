---
// Import the global.css file here so that it is included on
// all pages through the use of the <SEO /> component.
import "../styles/globals.scss";
import SectionContainer from "@/components/SectionContainer.astro";
import SEO from "@/components/seo/SEO.astro";

const currentYear = new Date().getFullYear();

const {
    class: className,
    title,
    description,
    keywords,
    url,
    image
} = Astro.props;
import { ViewTransitions } from 'astro:transitions';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <SEO
            title={title}
            description={description}
            keywords={keywords}
            url={url}
            image={image}
        />
    </head>
    <body>
        <main class={className}>
            <slot />
        </main>

        <SectionContainer class="mt-32">
            <footer class="py-40 bg-neutral-50">
                <div class="wrap-sm mx-auto px-8 grid gap-8 lg:gap-16">
                    <h2
                        class="font-medium text-2xl md:text-6xl lg:text-7xl leading-10 lg:leading-[70px] tracking-tight lg:tracking-tighter"
                    >
                        Let&apos;s make{" "}
                        <span
                            class="text-neutral-500 inline font-bold underline-offset-4 underline"
                        >
                            awesome work
                        </span>{" "}
                        together.
                    </h2>
                    <p
                        class="text-neutral-500 font-medium text-xl md:text-5xl lg:text-4xl leading-10 tracking-tight lg:tracking-tighter"
                    >
                        If you want to know more about tweaking my style, adding
                        more posts, and making it truly yours, just click on the
                        GitHub link below to check out my repo.
                    </p>
                    <slot name="social-icons"/>
                    <span
                        class="text-neutral-500 text-md flex flex-wrap gap-4 md:gap-0 md:justify-between"
                    >
                        <span>Copyright © {currentYear} 🚀 Harsh Pareek</span>
                        <a class="" target="_blank" href="https://www.chrstnl.com/">
                            Made with 👨‍🚀🔭☄︎🌌 Astro.
                        </a>
                    </span>
                </div>
            </footer>
        </SectionContainer>
    </body>
</html>
