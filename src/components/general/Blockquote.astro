---
type Props = {
    title:string
    subtitle:string
    link:string
}

import ArrowRightLight from 'phosphor-astro/ArrowRightLight.astro'
import Quote from 'phosphor-astro/QuotesDuotone.astro'

const {title,subtitle,link} = Astro.props

---

<div class="py-4">
<div class="border rounded-md p-4 flex flex-col select-none hover:cursor-pointer bg-zinc-100 group hover:-translate-y-2 transition-all duration-200 ease-in-out">
    <div class="flex items-center gap-2">
        <Quote class="h-10 w-10"/>
    <h4 class="!text-base md:!text-xl font-normal !m-0">
        {title}
    </h4>
    </div>
    <div class="flex items-center gap-2">
    <p class="m-0 text-sm md:text-base">{subtitle}</p>
    <a href={link} target="_blank">
        <ArrowRightLight class="h-6 w-6 md:h-10 md:w-10 inline group-hover:translate-x-2 transition-all duration-200 ease-in-out"/>
    </a>
</div>
</div>
</div>